<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="patrick.myappportfolio.MainActivity"
    android:orientation="vertical"
    android:background="#dddcdc">

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#2E3D49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="@string/my_nanodegree_apps" />
    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:id="@+id/button_1"
        android:text="popular movies"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"/>
    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_2"
        android:textAllCaps="true"
        android:text="stock hawk"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"/>
    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_3"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:text="build it bigger"

        android:background="#2E3D49"
        />
    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_4"
        android:text="make your app material"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:background="#2E3D49"/>
    <Button
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:id="@+id/button_5"
        android:textAllCaps="true"
        android:layout_width="200dp"
        android:text="go ubiquitous"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"/>
    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_6"
        android:textAllCaps="true"
        android:text="captone"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"/>


</LinearLayout>
